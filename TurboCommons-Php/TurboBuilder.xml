<?xml version="1.0" encoding="UTF-8"?>
<TurboBuilder xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/edertone/TurboBuilder/master/TurboBuilder-Ant/turboBuilder/TurboBuilder.xsd">

	<Build>
	
		<Php createPhar="true" />
	
	</Build>

	<Release gitChangeLog="true"
			 optimizePhp="false"
			 phpDoc="true" />
	
	<Validate enabled="true">
	
		<ProjectStructure enabled="true" />

		<PhpNamespaces enabled="true"
					   mandatory="true"
					   forcePath="true"
					   mustContain="org\turbocommons\src"
					   excludes="**/AutoLoader.php,**/index.php" />

		<Css enabled="false" />

		<CopyrightHeaders enabled="true">
		
			<Header path="assets/copyrightHeaders/TurboCommons-Generic.txt" 
					appliesTo="src/main/php"
					includes=""
					excludes="" />
			
			<Header path="assets/copyrightHeaders/TurboCommons-Generic.txt" 
					appliesTo="src/test/php"
					includes="**/*.php" />
		
		</CopyrightHeaders>
	
	</Validate>
	
	<Test>	
	
		<Php enabled="true" 
			 mode="commandLine" />	
			 	  
	</Test>
			
</TurboBuilder>