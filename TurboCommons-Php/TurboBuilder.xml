<?xml version="1.0" encoding="UTF-8"?>
<TurboBuilder xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/edertone/TurboBuilder/master/TurboBuilder-Ant/turboBuilder/TurboBuilder.xsd">

	<Build>
	
		<Php enabled="true"
			 createPhar="true" />
	
	</Build>

	<Release />
	
	<Validate enabled="true">
	
		<ProjectStructure enabled="true" />

		<PhpNamespaces enabled="true"
					   mandatory="true"
					   mustContain="org\turbocommons\src\$path"
					   excludes="**/AutoLoader.php,**/index.php" />

		<Css enabled="false" />

		<CopyrightHeaders enabled="true">
		
			<Header path="support/copyrightHeaders/TurboCommons-Php.txt" 
					appliesTo="src"
					includes="**/*.php"
					excludes="" />
		
		</CopyrightHeaders>
	
	</Validate>
	
	<Test>	
	
		<Php enabled="true" 
			 mode="commandLine"
             coverageReport="true"
             coverageReportOpenAfterTests="true" />	
			 	  
	</Test>
			
</TurboBuilder>