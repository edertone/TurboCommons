{
	"metadata": {
		"name": "turbocommons-ts",
		"description": "General purpose library that implements frequently used and generic software development tasks"
	},
	
	"validate": {
		"runBeforeBuild": true,
		"projectStructure" : {
	        "enabled": true,
	        "forceExtrasFolder": true,
	        "forceReadmeFile": true,
	        "forceTODOFile": true,
	        "resourcesStructure": true,
	        "phpStructure": true,
	        "jsStructure": true,
	        "tsStructure": true,
	        "tsConfigFile": true,
	        "javaStructure": true,
	        "cssStructure": true,
	        "checkGitIgnore": true
	    },
	    "copyrightHeaders": [
	    	{
	    		"path": "extras/copyrightHeaders/TsFiles-Header.txt",
	    		"appliesTo": "src",
	    		"filterRegexp": "*.ts"
	    	},
	    	{
	    		"path": "extras/copyrightHeaders/JsFiles-Header.txt",
	    		"appliesTo": "src",
	    		"filterRegexp": "*.js"
	    	}
	    ]
    },
    
    "build": {
    
	    "keepUnpackedSrcFiles" : false,
	    
	    "ts" : {
	        "enabled": true,
	        "declaration": true,
	        "strict": true,
	        "sourceMap": true,
	        "targets": [
	            {"folder": "ts", "jsTarget": "ES5"},
	            {"folder": "es5", "jsTarget": "ES5", "mergedFile": "turbocommons-es5", "globalVar": "org_turbocommons"},
	            {"folder": "es6", "jsTarget": "ES6", "mergedFile": "turbocommons-es6", "globalVar": "org_turbocommons"}
	        ]
	    }
    },
    
    "release": {
	    "gitChangeLog": true,
	    "gitChangeLogCount": 5,
	    "optimizeCss": true,
	    "optimizeHtml": true,
	    "optimizeJs": true,
	    "optimizePhp": false,
	    "optimizePictures": true,
	    "generateCodeDocumentation": true
    },
    
    "test": {
	    "ts": {
	        "enabled": true,
	        "httpServerPort": "8185",
	        "targets": ["es5", "es6"],
	        "browsers": {"chrome": true, "firefox": false, "iexplore": false},
	        "testingLibrary": "qunit"
	    }
    }
}